<main class="container text-black">
<h3 class="text-2xl text-center font-bold mb-4 block text-light">Socket Test</h3>
<div>
    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-3 gap-4">
        {{!-- Crear --}}
        <div class="bg-white rounded-lg shadow p-4">
            <form id="productForm">
                <fieldset>
                    <legend class="text-lg font-bold">Add new product</legend>

                    <div class="my-2">
                        <label class="font-bold" for="title">Title:</label>
                        <input type="text" id="title" name="title" required class="border border-gray-300 rounded-md px-2 py-1"/>
                    </div>

                    <div class="my-2">
                        <label class="font-bold" for="description">Description:</label>
                        <textarea id="description" name="description" required class="border border-gray-300 rounded-md px-2 py-1"></textarea>
                    </div>

                    <div class="my-2">
                        <label class="font-bold" for="price">Price:</label>
                        <input type="number" id="price" name="price" required class="border border-gray-300 rounded-md px-2 py-1" />
                    </div>

                    <div class="my-2">
                        <label class="font-bold" for="code">Code::</label>
                        <input type="text" id="code" name="code" required class="border border-gray-300 rounded-md px-2 py-1" />
                    </div>

                    <div class="my-2">
                        <label class="font-bold" for="thumbnail">Image(File):</label>
                        <input type="file" name="file" id="thumbnail" required class="border border-gray-300 rounded-md px-2 py-1" />
                    </div>

                    <div class="my-2">
                        <label class="font-bold" for="stock">Stock:</label>
                        <input type="number" id="stock" name="stock" required class="border border-gray-300 rounded-md px-2 py-1" />
                    </div>

                    <div class="my-2">
                        <label class="font-bold" for="category">Category:</label>
                        <input type="text" id="category" name="category" required class="border border-gray-300 rounded-md px-2 py-1" />
                    </div>

                    <div class="my-2">
                        <label class="font-bold" for="status">Status:</label>
                        <select id="status" name="status" required class="border border-gray-300 rounded-md px-2 py-1 black">
                            <option value="available">Available</option>
                            <option value="out_of_stock">Unavailable</option>
                        </select>
                    </div>

                    <div class="my-2">
                        <button type="submit" id="createProductButton" class="bg-green-500 text-white rounded-md px-4 py-2 btn btn-success">Add</button>
                    </div>
                </fieldset>
            </form>
        </div>
        {{!-- Eliminar --}}
        <div class="bg-white rounded-lg shadow p-4">
            <form id="deleteProdForm">
                <fieldset>
                    <legend class="text-lg font-bold">Delete product by ID</legend>

                    <div class="my-2">
                        <label class="font-bold" for="title">Product ID:</label>
                        <input type="text" id="pid" name="title" required class="border border-gray-300 rounded-md px-2 py-1"/>
                    </div>
                    <div class="my-2">
                        <button type="submit" id="deleteProductButton" class="bg-red-500 text-white rounded-md px-4 py-2 btn btn-danger">Delete</button>
                    </div>
                </fieldset>
        </div>
    </div>
    <div class="flex justify-center mt-4">
        <div id="messageParagraph" class="bg-green-100 border border-green-500 text-green-800 px-4 py-2 mt-4 rounded-lg">
            
        </div>
    </div>
</div>
</main>


